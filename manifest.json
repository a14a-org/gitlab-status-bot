{
    "_metadata": {
        "major_version": 1,
        "minor_version": 1
    },
    "display_information": {
        "name": "GitLab Status Bot",
        "description": "A bot to display nice, clean status updates for GitLab CI/CD pipelines.",
        "background_color": "#2E2D2D"
    },
    "features": {
        "bot_user": {
            "display_name": "GitLab Status",
            "always_online": true
        }
    },
    "oauth_config": {
        "scopes": {
            "bot": [
                "chat:write"
            ]
        }
    },
    "settings": {
        "interactivity": {
            "is_enabled": true
        },
        "org_deploy_enabled": false,
        "socket_mode_enabled": true,
        "token_rotation_enabled": false
    }
} 